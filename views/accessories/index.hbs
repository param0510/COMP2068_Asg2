<h2>{{title}}</h2>

<a href="accessories/add">
    <img height="25" src="images/add.png" alt="add button image">
</a>

{{!-- Display the accessories list here --}}


<div class="d-flex  flex-wrap container-fluid">

    {{#each accessories}}
        <div class="card w-25 m-3">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                {{#if (areEqual this.imageName "")}}
                    <img src="images/placeholder/car_accessories.webp" class="img-fluid" />
                {{else}}
                {{!-- const --}}
                    <img src="uploads/images/accessories/{{this.imageName}}" class="img-fluid" />
                {{/if}}
                <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.prodName}} <span class="h6 text-muted">({{this.dimensions}})</span> </h5>
                <div class="d-flex mb-2">
                    <div class="text-muted">#{{this.modelNumber}}</div>
                    <div class="mx-auto"></div>
                    <div class="">${{this.price}}</div>
                </div>
                <div class="d-flex mb-2 text-muted">
                    <div class=" ">Category: {{this.type}}</div>
                    <div class="mx-auto"></div>
                    <div class="">{{this.quantity}} in stock</div>
                </div>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                    content.</p>
                {{!-- <a href="#!" class="btn btn-success">Buy</a>
                <a href="#!" class="btn btn-primary">View</a> --}}
                <a href="/accessories/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDelete()">Delete</a>
                <a href="/accessories/edit/{{this._id}}" class="btn btn-warning">Edit</a>
            </div>
        </div>
    {{/each}}

</div>
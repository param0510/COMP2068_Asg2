<h2>{{title}}</h2>

<a href="cars/add">
    <img height="25" src="images/add.png" alt="add button image">
</a>

{{!-- Display the cars list here --}}


<div class=" d-flex">
    {{#each cars}}
        <div class="card w-25 m-3">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="images/placeholder/car.webp" class="img-fluid" />
                <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.year}} {{this.make}} {{this.model}} ({{this.transmission}})</h5>
                <h6 class="small text-muted">{{this.mileage}} kms</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                    content.</p>

                {{!-- Fluctuate these options with user change --}}
                {{!-- Client role --}}
                <a href="#!" class="btn btn-success">Buy/Add to Cart</a>
                {{!-- Admin role --}}
                <a href="/cars/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDelete()">Delete</a>
                <a href="/cars/edit/{{this._id}}" class="btn btn-warning">Edit</a>
            </div>
        </div>
    {{/each}}
</div>


{{!-- cars list display page - lists out all the car objects stored in the database --}}

<h2>{{title}}</h2>

{{#if authUser}}
<a href="cars/add">
    <img height="25" src="images/add.png" alt="add button image">
</a>
    
{{/if}}

{{!-- Display the cars list here --}}


<div class=" d-flex flex-wrap container-fluid">
    {{#each cars}}
        <div class="card w-25 m-3">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                {{#if (areEqual this.imageName "")}}
                    <img src="images/placeholder/car.webp" class="img-fluid" />
                {{else}}
                    {{!-- const  --}}
                    <img src="uploads/images/cars/{{this.imageName}}" class="img-fluid" />
                {{/if}}
                <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.year}} {{this.make}} {{this.model}} ({{this.transmission}})</h5>
                <h6 class="small text-muted">{{this.mileage}} kms</h6>
                <p class="card-text">{{this.desc}}</p>

                {{!-- Fluctuate these options with user change --}}
                {{!-- Client role --}}
                {{!-- <a href="#!" class="btn btn-success">Buy/Add to Cart</a> --}}
                {{!-- Admin role --}}
                {{#if ../authUser}}
                <a href="/cars/delete/{{this._id}}" class="btn btn-danger " onclick="return confirmDelete()">Delete</a>
                <a href="/cars/edit/{{this._id}}" class="btn btn-warning">Edit</a>
                {{/if}}
                {{!-- </div> --}}

            </div>
        </div>
    {{/each}}
</div>

